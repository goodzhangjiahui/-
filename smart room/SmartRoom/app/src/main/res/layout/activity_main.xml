<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <com.example.smartroom.TitleLayout
        android:id="@+id/titleLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.smartroom.TitleLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#5900BCD4"
        android:columnCount="2"
        android:orientation="vertical"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/bt_fan"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="#313F51B5"
            app:srcCompat="@drawable/fanguang" />

        <ImageButton
            android:id="@+id/bt_key"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="#313F51B5"
            app:srcCompat="@drawable/czguan" />

        <ImageButton
            android:id="@+id/bt_wsd"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="#313F51B5"
            app:srcCompat="@drawable/wsdguan" />

        <ImageButton
            android:id="@+id/bt_timetask"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="#313F51B5"
            app:srcCompat="@drawable/lsjl" />

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="#313F51B5"
            app:srcCompat="@drawable/setting" />

        <ImageButton
            android:id="@+id/bt_waring"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:background="#313F51B5"
            app:srcCompat="@drawable/bjguan" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>